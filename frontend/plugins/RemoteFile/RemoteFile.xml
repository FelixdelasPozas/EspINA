<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <!-- ================================================================== -->
    <SourceProxy name="FileReader" class="vtkRemoteFileReader" label="Remote File Plugin (Label)">
      <Documentation
         long_help="Read a plain text file."
         short_help="Read a txt file.">
      </Documentation>
      <StringVectorProperty
            name="FileName"
            animateable="0"
            command="SetFileName"
            number_of_elements="1">
        <FileListDomain name="files"/>
        <Documentation>
          This property specifies the file name for the plain text reader.
        </Documentation>
      </StringVectorProperty>
      
      <StringVectorProperty
        name="Content"
        command="GetContent"
        number_of_elements="1"
        information_only="1"
        default_values="">
        <SimpleStringInformationHelper/>
        <Documentation>
          This property retrieve the content of the file specified by FileName
        </Documentation>
      </StringVectorProperty>
  <!--    <Hints>
        <ReaderFactory extensions="trace"
                        file_description="Trace file format" />
      </Hints>-->
    </SourceProxy>
    <!-- End PTXReader -->
  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>