<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
	  <!-- SourceProxy name="SeedGrowingSegmentationFilter"
		  class="vtkConnectedThresholdRegionGrowImageFilter" 
		  label="Seed Growing Segmentation Filter"-->
	   <SourceProxy name="SeedGrowSegmentationFilter" class="vtkConnectedThresholdImageFilter" label="Seed Growing Segmentation Filter" >
     <Documentation
		 long_help="Build a new segmentation using a seed growing filter"
		 short_help="Build a new segmentation using a seed growing filter">
		 This is the original itk implementation
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>
	  <IntVectorProperty
		 name="Seed"
         number_of_elements="3"
		 default_values="0 0 0"
		 immediate_update="1"
		 command="Setm_seed">
      </IntVectorProperty>
      <IntVectorProperty
        name="Threshold"
	number_of_elements="1"
	default_values="30"
	immediate_update="1"
	command="SetThreshold">
      </IntVectorProperty>
      <IntVectorProperty
        name="CheckPixel"
	number_of_elements="4"
	immediate_update="1"
	default_values="0 0 0 0"
	command="SetCheckPixel">
	<SimpleIntInformationHelper/>
      </IntVectorProperty>
      <IntVectorProperty
        name="PixelValue"
	number_of_elements="1"
	information_only="1"
	default_values="0"
	command="GetPixelValue">
	<SimpleIntInformationHelper/>
      </IntVectorProperty>
      <IntVectorProperty
        name="SegExtent"
	number_of_elements="6"
	information_only="1"
	default_values="0 -1 0 -1 0 -1"
	command="GetSegExtent">
	<SimpleIntInformationHelper/>
      </IntVectorProperty>
   <!-- End SegmentationFilter -->
   </SourceProxy>

 </ProxyGroup>
</ServerManagerConfiguration>

