<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <!-- ================================================================== -->
    <SourceProxy name="PTXReader" class="vtkRemoteFileReader" label="RemoteFileReader">
      <Documentation
         long_help="Read a plain text file."
         short_help="Read a txt file.">
      </Documentation>
      <StringVectorProperty
            name="FilePath"
            animateable="0"
            command="SetFilePath"
            number_of_elements="1">
        <FileListDomain name="files"/>
        <Documentation>
          This property specifies the file name for the plain text reader.
        </Documentation>
      </StringVectorProperty>
 
      <Hints>
        <ReaderFactory extensions="trace"
                       file_description="Trace file format" />
     </Hints>
    </SourceProxy>
    <!-- End PTXReader -->
  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>