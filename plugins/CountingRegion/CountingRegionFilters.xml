<ServerManagerConfiguration>
	<!-- This is the server manager configuration XML. It defines the interface to
	   our new filter. As a rule of thumb, try to locate the configuration for
	   a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
	   that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
	  <SourceProxy name="BoundingRegion" class="vtkBoundingRegionFilter" label="Bounding Region Filter" >
		  <Documentation
			  long_help="filter"
			  short_help="filter">
		  </Documentation>
		  <InputProperty
			  name="Input"
			  command="SetInputConnection">
			  <ProxyGroupDomain name="groups">
				  <Group name="sources"/>
				  <Group name="filters"/>
			  </ProxyGroupDomain>
			  <DataTypeDomain name="input_type">
				  <DataType value="vtkImageData"/>
			  </DataTypeDomain>
		  </InputProperty>
		  <!-- End Bounding Region Filter -->
	  </SourceProxy>
	  <SourceProxy name="CountingRegion" class="vtkCountingRegionFilter" label="Counting Region Filter" >
		  <Documentation
			  long_help="filter"
			  short_help="filter">
		  </Documentation>
		  <InputProperty
			  name="Input"
			  command="SetInputConnection">
			  <ProxyGroupDomain name="groups">
				  <Group name="sources"/>
				  <Group name="filters"/>
			  </ProxyGroupDomain>
			  <DataTypeDomain name="input_type">
				  <DataType value="vtkImageData"/>
			  </DataTypeDomain>
		  </InputProperty>
		  <IntVectorProperty
			  name="Seed"
			  number_of_elements="3"
			  default_values="0 0 0"
			  immediate_update="1"
			  command="Setm_seed">
		  </IntVectorProperty>
		  <DoubleVectorProperty
			  name="Threshold"
			  number_of_elements="1"
			  default_values="30"
			  immediate_update="1"
			  command="Setm_threshold">
		  </DoubleVectorProperty>
		  <!-- End Counting Region Filter -->
	  </SourceProxy>

  </ProxyGroup>
</ServerManagerConfiguration>

