<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
          <!-- SourceProxy name="SeedGrowingSegmentationFilter"
                  class="vtkConnectedThresholdRegionGrowImageFilter" 
                  label="Seed Growing Segmentation Filter"-->
           <SourceProxy name="SelectedPixelList" class="vtkSelectedPixelList" label="List of the selected pixels" >
     <Documentation
                 long_help=""
                 short_help="">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>
          <IntVectorProperty
                 name="Point"
                 number_of_elements="3"
                 default_values="0 0 0"
                 immediate_update="1"
                 command="Setm_lastPoint">
      </IntVectorProperty>
   </SourceProxy>

 </ProxyGroup>
</ServerManagerConfiguration>
