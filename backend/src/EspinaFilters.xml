<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy name="SeedGrowingSegmentationFilter" class="vtkSegmentationFilter" label="Seed Growing Segmentation Filter">
     <Documentation
		 long_help="Build a new segmentation using a seed growing filter"
		 short_help="Build a new segmentation using a seed growing filter">
		 This is the original itk implementation
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>
   <!-- End SegmentationFilter -->
   </SourceProxy>

   <!-- ************************************************ -->
   <!-- HERE BEGINS THOSE PLUGINS REQUIRED BY THE CLIENT -->
   <!--    TODO: They must be compiled with the client   -->
   <!-- ************************************************ -->

   <SourceProxy name="ImageSlicer" class="vtkPVImageSlicer" label="ImageSlicer">
     <Documentation
        long_help="Create a plane representing a slice of a given image."
        short_help="Create a slice of a given image.">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <IntVectorProperty
		 name="SliceMode"
         number_of_elements="1"
		 default_values="5"
		 immediate_update="1"
        command="SetSliceMode">
      </IntVectorProperty>
     <IntVectorProperty
		 name="Slice"
         number_of_elements="1"
         default_values="0"
		 immediate_update="1"
        command="SetSlice">
      </IntVectorProperty>
   </SourceProxy>

   <SourceProxy name="ImageMapToColors" class="vtkImageMapToColors" label="ImageMapToColors">
     <Documentation
		long_help="Map the input image through a lookup table"
		short_help="The vtkImageMapToColors filter will take an input 
		image of any valid scalar type, and map the first component of 
		the image through a lookup table. The result is an image of type 
		VTK_UNSIGNED_CHAR. If the lookup table is not set, or is set to NULL,
		then the input data will be passed through if it is already of 
		type VTK_UNSIGNED_CHAR.">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <ProxyProperty
        name="LookupTable"
        command="SetLookupTable">
      </ProxyProperty>
   </SourceProxy>

   <SourceProxy name="ImageBlend" class="vtkImageBlend" label="ImageBlend">
     <Documentation
        long_help="Blends images together using alph or opacity"
		short_help="Blends images together using alph or opacity">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <InputProperty
        name="BlendInput"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
   </SourceProxy>


   <SourceProxy name="MyWindowLevelLookupTable" class="vtkWindowLevelLookupTable" label="WindowLevelLookupTable">
     <Documentation
        long_help="Map scalar values into colors or colors to scalars; generate color table"
		short_help="">
     </Documentation>
     <DoubleVectorProperty
		 name="Window"
         number_of_elements="1"
		 default_values="255"
		 immediate_update="1"
        command="SetWindow">
      </DoubleVectorProperty>
     <DoubleVectorProperty
		 name="Level"
         number_of_elements="1"
		 default_values="127.5"
		 immediate_update="1"
        command="SetLevel">
      </DoubleVectorProperty>
     <IntVectorProperty
		 name="Ramp"
         number_of_elements="1"
		 default_values="0"
		 immediate_update="1"
        command="SetRamp">
      </IntVectorProperty>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>

