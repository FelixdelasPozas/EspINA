<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy name="SegmentationFilter" class="vtkSegmentationFilter" label="ESPINA Segmentation">
     <Documentation
        long_help="Create point attribute array by projecting points onto an elevation vector."
        short_help="Create a point array representing elevation.">
          The Elevation filter generates point scalar values for an input data
          set along a specified direction vector. The Input menu allows the user
          to select the data set to which this filter will be applied. The Low
          Point and High Point define a line onto which each point of the data
          set is projected. The minimum scalar value is associated with the Low
          Point, and the maximum scalar value is associated with the High Point.
          The scalar value for each point in the data set is determined by the
          location along the line to which that point projects.

          The line can be specified interactively using the 3D line widget. See
          section 7.4 for more information about this widget.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkImageData"/>
           </DataTypeDomain>
      </InputProperty>

      <IntVectorProperty
         name="VOI"
         label="Volume Of Interest"
         command="SetVOI"
         number_of_elements="6"
         animateable="1"
         default_values="100 200 100 200 50 100" >
		 <!--BoundsDomain name="range" mode="normal" default_mode="min" >
           <RequiredProperties>
             <Property name="Input" function="Input" />
           </RequiredProperties>
         </BoundsDomain-->
         <Documentation>
           Define one end of the line (small scalar values). Default is (0,0,0).
         </Documentation>
      </IntVectorProperty>
	  
	  <IntVectorProperty
         name="SampleRate"
         label="Sample Rates"
         command="SetSampleRate"
         number_of_elements="3"
         animateable="0"
         default_values="1 1 1" >
		 <!--BoundsDomain name="range" mode="normal" default_mode="min" >
           <RequiredProperties>
             <Property name="Input" function="Input" />
           </RequiredProperties>
         </BoundsDomain-->
         <Documentation>
           Define one end of the line (small scalar values). Default is (0,0,0).
         </Documentation>
      </IntVectorProperty>

      <!--Hints>
        <PropertyGroup type="Line" label="My Elevation Widget">
          <Property function="Point1WorldPosition" name="LowPoint" />
          <Property function="Point2WorldPosition" name="HighPoint" />
        </PropertyGroup>
      </Hints-->
   <!-- End SegmentationFilter -->
   </SourceProxy>

   <SourceProxy name="ImageSlicer" class="vtkPVImageSlicer" label="ImageSlicer">
     <Documentation
        long_help="Create a plane representing a slice of a given image."
        short_help="Create a slice of a given image.">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <IntVectorProperty
		 name="SliceMode"
         number_of_elements="1"
		 default_values="5"
		 immediate_update="1"
        command="SetSliceMode">
      </IntVectorProperty>
     <IntVectorProperty
		 name="Slice"
         number_of_elements="1"
         default_values="0"
		 immediate_update="1"
        command="SetSlice">
      </IntVectorProperty>
   </SourceProxy>

   <SourceProxy name="ImageMapToColors" class="vtkImageMapToColors" label="ImageMapToColors">
     <Documentation
		long_help="Map the input image through a lookup table"
		short_help="The vtkImageMapToColors filter will take an input 
		image of any valid scalar type, and map the first component of 
		the image through a lookup table. The result is an image of type 
		VTK_UNSIGNED_CHAR. If the lookup table is not set, or is set to NULL,
		then the input data will be passed through if it is already of 
		type VTK_UNSIGNED_CHAR.">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <ProxyProperty
        name="LUT"
        command="SetLookupTable">
      </ProxyProperty>
   </SourceProxy>

   <SourceProxy name="ImageBlend" class="vtkImageBlend" label="ImageBlend">
     <Documentation
        long_help="Blends images together using alph or opacity"
		short_help="Blends images together using alph or opacity">
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
     <InputProperty
        name="BlendInput"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataImage"/>
           </DataTypeDomain>
      </InputProperty>
   </SourceProxy>


   <SourceProxy name="MyWindowLevelLookupTable" class="vtkWindowLevelLookupTable" label="WindowLevelLookupTable">
     <Documentation
        long_help="Map scalar values into colors or colors to scalars; generate color table"
		short_help="">
     </Documentation>
     <DoubleVectorProperty
		 name="Window"
         number_of_elements="1"
		 default_values="255"
		 immediate_update="1"
        command="SetWindow">
      </DoubleVectorProperty>
     <DoubleVectorProperty
		 name="Level"
         number_of_elements="1"
		 default_values="127.5"
		 immediate_update="1"
        command="SetLevel">
      </DoubleVectorProperty>
     <IntVectorProperty
		 name="Ramp"
         number_of_elements="1"
		 default_values="0"
		 immediate_update="1"
        command="SetRamp">
      </IntVectorProperty>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>

